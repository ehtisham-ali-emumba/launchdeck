{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Path mapping */
    "baseUrl": "src",
    "paths": {
      "~/components": ["components"],
      "~/components/*": ["components/*"],
      "~/api": ["api"],
      "~/api/*": ["api/*"],
      "~/atoms": ["atoms"],
      "~/atoms/*": ["atoms/*"],
      "~/layout": ["layout"],
      "~/layout/*": ["layout/*"],
      "~/providers": ["providers"],
      "~/providers/*": ["providers/*"],
      "~/routes": ["routes"],
      "~/routes/*": ["routes/*"],
      "~/services": ["services"],
      "~/services/*": ["services/*"],
      "~/pages": ["pages"],
      "~/pages/*": ["pages/*"],
      "~/styles": ["styles"],
      "~/styles/*": ["styles/*"],
      "~/utils": ["utils"],
      "~/utils/*": ["utils/*"],
      "~/hooks": ["hooks"],
      "~/hooks/*": ["hooks/*"],
      "~/constants": ["constants"],
      "~/constants/*": ["constants/*"],
      "~/assets": ["assets"],
      "~/assets/*": ["assets/*"],
      "~/types": ["types"],
      "~/types/*": ["types/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
